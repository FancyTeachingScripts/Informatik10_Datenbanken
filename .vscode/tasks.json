{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-single-tex",
            "type": "shell",
            "command": "lualatex",
            "args": [
                "-interaction=nonstopmode",
                "${input:texFile}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "build-all-main-tex",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", ".vscode/build-parallel.ps1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
